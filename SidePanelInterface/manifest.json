{
    "manifest_version": 3,
    "name": "Saatva.com Side Panel",
    "version": "1.0",
    "description": "Shows how to display the side panel only on saatva.com using the Side Panel API.",
    "background": {
      "service_worker": "service-worker.js"
    },
    "action": {
      "default_title": "Click to open panel"
    },
    "permissions": ["sidePanel", "tabs"],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        }
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }